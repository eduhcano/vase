<% form_for(@avatar, :url => profile_avatar_path(@p), :html => {:multipart => true, :id => 'avatar'}) do |f| %>
	<%= f.error_messages %>
	<br />
	<table>
		<tr>
			<th>
				<label for="user_profile_image">
					<%= image_tag @p.avatar.image.url(:medium) %>
				</label>
			</th>
			<td>
				<%= f.file_field :image %> 		
				<%- unless !@p.avatar.image? -%>
				<p><%= f.check_box(:delete_image) %> <%= f.label(:delete_image, t(".check_for_delete")) %></p>
				<% end %>
			</td>   
		</tr>
		<tr>
			<th></th>
			<td>
				<%= submit_tag t("views.common.save_changes"), :or => (link_to t("views.common.back"), root_path) %>
			</td>
		</tr>
	</table>
<% end %>
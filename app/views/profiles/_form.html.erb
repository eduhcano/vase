<% form_for(@p, :cotroller => "profile", :action => "update", :html => {:id => 'profile'}) do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :first_name, t(".first_name") %><br />
		<%= f.text_field :first_name %>
	</p>
	<p>
		<%= f.label :last_name, t(".last_name") %><br />
		<%= f.text_field :last_name %>
	</p>
	<p>
		<%= f.label :address, t(".address") %><br />
		<%= f.text_field :address %>
	</p>
	<p>
		<%= f.label :city, t(".city") %><br />
		<%= f.text_field :city %>
	</p>
	<p>
		<%= f.label :zip, t(".zip") %><br />
		<%= f.text_field :zip, :size => 10 %>
	</p>
	<p>
		<%= f.label :state, t(".state") %><br />
		<%= f.text_field :state %>
	</p>
	<p>
		<%= f.label :location, t(".country") %><br />
		<%= f.localized_country_select(:country, [], :include_blank => t("views.common.select_one")) %>
	</p>
	<p>
		<%= f.label :website, t(".website") %><br />
		<%= f.text_field :website %>
	</p>
	<p>
		<%= f.label :company, t(".company") %><br />
		<%= f.text_field :company %>
	</p>
	<p>
		<%= f.label :time_zone, t(".time_zone") %><br />
		<%= f.time_zone_select :time_zone %>
	</p>
	<p>
		<%= f.label :language, t(".language") %><br />
		<%= f.select :language, locales %>
	</p>	
	<p>
		<%= submit_tag t("views.common.save_changes"), :or => (link_to t("views.common.back"), root_path) %>
	</p>
<% end %>
<div id="profile">
	<div id="left">
		<h1><%=h @profile.user.login %></h1>
		<p><%= @profile.brief_location %></p>
		<%= image_tag(@profile.avatar.url(:medium)) %>
		<p><%= friend_link(@p, @profile) %></p>
		<p><%= link_to t("views.common.back"), root_path %></p>
	</div>
	<div id="right">
		<div id="following_list">
			<h2>following</h2>
			<%= render :partial => "friend", :collection => @followings %>
		</div>
		<div id="followers_list">
			<h2>followers</h2>
			<%= render :partial => "friend", :collection => @followers %>
		</div>
	</div>
</div>
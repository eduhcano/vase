<div id="navigation">
	<ul>		
		<% if !current_user %>
		  <li><%= link_to t("views.user_sessions.register"), new_account_path %></li>
			<li><span class="separator">|</span></li>
		  <li><%= link_to t("views.user_sessions.log_in"), new_user_session_path %></li>
		<% else %>
		  <li><%= t("views.user_sessions.welcome") %> <%= link_to current_user.login, edit_profile_path(@p) %></li>
		  <li><span class="separator">|</span></li>
		  <li><%= link_to t("views.user_sessions.logout"), user_session_path, :method => :delete, :confirm => t("views.common.are_you_sure") %></li>
		<% end %>		
	</ul>
</div>

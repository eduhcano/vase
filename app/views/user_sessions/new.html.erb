<h1><%= t(".log_in").capitalize %></h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>

	<div id="login_container">
		<p><%= f.label :login, t(".username") %> (<%= t("views.common.or") %> <a href="#" onclick="$('login_container').toggle(); $('openid_container').toggle();; return false;"><%= t(".use_open_id") %></a>)<br /> 
		<%= f.text_field :login %></p>
		<p><%= f.label :password, t(".password") %><br />
		<%= f.password_field :password %></p>
	</div>
	
	<div id="openid_container" style="display: none;">
		<p><%= f.label :openid_identifier, t(".openid_identifier") %> (<%= t("views.common.or") %> <a href="#" onclick="$('login_container').toggle(); $('openid_container').toggle(); return false;"><%= t(".login_using_standard_account") %></a>)<br />
		<%= f.text_field :openid_identifier %></p>
  </div>

	<p><%= f.check_box :remember_me %><%= f.label :remember_me, t(".remember_me") %><p/>

  <%= f.submit t(".log_me_in") %> <%= t("views.common.or") %> <%= link_to t(".remember_my_password"), new_password_reset_path %>
<% end %>
<h1><%= t("views.user_sessions.log_in") %></h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>

	<div id="login_container">
		<p><%= f.label :login, t("views.user_sessions.login") %> (<%= t("views.common.or") %> <a href="#" onclick="$('login_container').toggle(); $('openid_container').toggle();; return false;"><%= t("views.user_sessions.use_open_id") %></a>)<br /> 
		<%= f.text_field :login %></p>
		<p><%= f.label :password, t("views.user_sessions.password") %><br />
		<%= f.password_field :password %></p>
	</div>
	
	<div id="openid_container" style="display: none;">
		<p><%= f.label :openid_identifier, t("views.user_sessions.openid_identifier") %> (<%= t("views.common.or") %> <a href="#" onclick="$('login_container').toggle(); $('openid_container').toggle(); return false;"><%= t("views.user_sessions.login_using_standard_account") %></a>)<br />
		<%= f.text_field :openid_identifier %></p>
  </div>

	<p><%= f.check_box :remember_me %><%= f.label :remember_me, t("views.user_sessions.remember_me") %><p/>

  <%= f.submit t("views.user_sessions.log_me_in") %> <%= t("views.common.or") %> <%= link_to t("views.user_sessions.remember_my_password"), new_password_reset_path %>
<% end %>
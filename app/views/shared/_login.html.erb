<div id="navigation">
	<ul>		
		<% if !current_user %>
			<li><%= link_to t("views.common.home"), root_path %></li>
		  <li><span class="separator">|</span></li>
		  <li><%= link_to t("views.user_sessions.register"), signup_path %></li>
			<li><span class="separator">|</span></li>
		  <li><%= link_to t("views.user_sessions.log_in"), login_path %></li>
		<% else %>
			<li><%= link_to t("views.common.home"), root_path %></li>
		  <li><span class="separator">|</span></li>
			<li><%= link_to current_user, settings_path %></li>
			<li><span class="separator">|</span></li>
		  <li><%= link_to t("views.user_sessions.logout"), logout_path, :method => :delete, :confirm => t("views.common.are_you_sure") %></li>
		<% end %>		
	</ul>
</div>

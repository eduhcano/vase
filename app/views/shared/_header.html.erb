<div id="navigation">
	<ul>		
		<% if !current_user %>
			<li><%= link_to t(".home"), root_path %></li>
		  <li><span class="separator">|</span></li>
		  <li><%= link_to t(".register"), signup_path %></li>
			<li><span class="separator">|</span></li>
		  <li><%= link_to t(".log_in"), login_path %></li>
		<% else %>
			<li><%= link_to t(".home"), root_path %></li>
		  <li><span class="separator">|</span></li>
			<li><%= link_to current_user, personal_path %></li>
			<li><span class="separator">|</span></li>
		  <li><%= link_to t(".logout"), logout_path, :method => :delete, :confirm => t("views.common.are_you_sure") %></li>
		<% end %>		
	</ul>
</div>
